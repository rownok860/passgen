{
  "manifest_version": 3,
  "name": "PassGen - Password Generator",
  "version": "1.0.1",
  "description": "A lightweight, privacy-focused password generator with recent history and update checks",
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "PassGen - Generate Secure Passwords",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "permissions": [
    "storage",
    "clipboardWrite",
    "alarms"
  ],
  
  "host_permissions": [
    "https://raw.githubusercontent.com/rownok860/passgen/main/version.json"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+P",
        "mac": "Alt+Shift+P"
      },
      "description": "Open PassGen password generator"
    }
  }
}